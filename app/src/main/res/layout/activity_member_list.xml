<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cse110.com.cse110_chores.MemberList">

    <!-- Button to go to the add member screen-->
    <Button
        android:id="@+id/memberAddButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/memberAddButton"/>

    <!-- Listview to display the members -->
    <ListView
        android:layout_above="@+id/memberAddButton"
        android:id="@+id/memberlistview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </ListView>

</RelativeLayout>

