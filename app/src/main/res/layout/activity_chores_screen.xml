<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cse110.com.cse110_chores.ChoresScreen">


    <LinearLayout
        android:id="@+id/chorelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/chore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:hint="@string/chore"
            />
        <Spinner
            android:id="@+id/choreSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_weight="1">

        </Spinner>

    </LinearLayout>

    <Button
        android:id="@+id/addChore"
        android:layout_below="@id/chorelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/choreAddButton"
        android:gravity="center"/>

</RelativeLayout>
